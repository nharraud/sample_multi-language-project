<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>test</groupId>
    <artifactId>multi-language-project</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>Multi-Language Test Project</name>
    <url>https://github.com/nharraud/multi-language-project</url>

    <scm>
        <connection>scm:git:git@github.com:nharraud/multi-language-project.git</connection>
        <developerConnection>scm:git:git@github.com:nharraud/multi-language-project.git</developerConnection>
        <url>https://github.com/nharraud/multi-language-project</url>
    </scm>

    <properties>
        <sonar.sources>src/main</sonar.sources>
        <sonar.tests>src/test</sonar.tests>

        <!-- For Java -->
        <sonar.junit.reportsPath>reports/java/surefire-reports</sonar.junit.reportsPath>
        <sonar.jacoco.reportPath>reports/java/jacoco.exec</sonar.jacoco.reportPath>

        <!-- For JavaScript -->
        <sonar.javascript.lcov.reportPath>reports/js/lcov.dat</sonar.javascript.lcov.reportPath>
    </properties>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.10</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>
